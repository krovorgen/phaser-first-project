{
  "name": "parcel-template",
  "version": "1.0.0",
  "license": "MIT",
  "source": "src/index.html",
  "scripts": {
    "recreate-dist": "rm -Rf dist",
    "stylelint": "stylelint \"**/*.scss\"",
    "stylelint:fix": "stylelint \"**/*.scss\" --fix",
    "dev": "pnpm run recreate-dist && parcel -p 3000 --open chrome",
    "build": "pnpm run recreate-dist && parcel build",
    "fmt": "prettier --write \"**/*.js\" \"**/*.json\" \"**/*.md\" \"**/*.ts\""
  },
  "dependencies": {
    "parcel": "^2.6.0"
  },
  "browserslist": [
    "last 2 version",
    "> 0.5%",
    "ie >= 11"
  ],
  "devDependencies": {
    "@parcel/config-default": "^2.6.2",
    "@parcel/transformer-sass": "^2.6.0",
    "@types/node": "^17.0.31",
    "prettier": "^2.4.1",
    "stylelint": "^13.13.1",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0"
  }
}
